{
  "filters": {
    "allowlist": {
      "allow": [
        "いいえ",
        "フラッシュ"
      ]
    },
    "comments": true
  },
  "plugins": {
    "asciidoctor": true,
    "html": true
  },
  "rules": {
    "preset-ja-spacing": {
      "ja-no-space-around-parentheses": false
    },
    "preset-ja-technical-writing": {
      "max-ten": {
        "max": 3
      },
      "no-doubled-joshi": {
        "allow": [
          "も",
          "や",
          "か"
        ],
        "min_interval": 1,
        "separatorCharacters": [
          "、",
          "。",
          "?",
          "!",
          "？",
          "！",
          "「",
          "」",
          "“",
          "”",
          "/",
          "／"
        ],
        "strict": false
      },
      "no-mix-dearu-desumasu": {
        "preferInBody": "である",
        "preferInHeader": "である",
        "preferInList": "である",
        "strict": false
      },
      "sentence-length": {
        "max": 150
      }
    },
    "preset-jtf-style": {
      "1.1.3.箇条書き": false,
      "1.2.1.句点(。)と読点(、)": true,
      "1.2.2.ピリオド(.)とカンマ(,)": true,
      "2.1.8.算用数字": true,
      "2.2.2.算用数字と漢数字の使い分け": true,
      "3.1.1.全角文字と半角文字の間": true,
      "3.1.2.全角文字どうし": true,
      "3.3.かっこ類と隣接する文字の間のスペースの有無": false,
      "4.2.6.ハイフン(-)": true,
      "4.3.1.丸かっこ（）": true,
      "4.3.2.大かっこ［］": true
    },
    "prh": {
      "rulePaths": [
        ".prh/prh.yml"
      ]
    }
  }
}
